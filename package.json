{
  "name": "bigreq",
  "version": "2.0.0",
  "description": "A Node.js based HTTP Request client for the BigCommerce API",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "types": "lib",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "nodemon lib/index.js",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run format",
    "preversion": "npm run format",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matthewvolk/bigreq"
  },
  "keywords": [
    "BigCommerce",
    "Big",
    "Commerce",
    "API",
    "Node",
    "ecommerce",
    "bigreq",
    "big",
    "req",
    "typescript",
    "zero dependency"
  ],
  "author": "Matthew Volk",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^16.7.10",
    "jest": "^27.4.7",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.5.4"
  },
  "bugs": {
    "url": "https://github.com/matthewvolk/bigreq/issues"
  },
  "homepage": "https://github.com/matthewvolk/bigreq#readme"
}
